{
  "build": {
    "src": {
      "html"      : [ "./src/jade/**/*.jade",
                      "!./src/jade/**/_*.jade" ],

      "css"       : "./src/styles/*.styl",

      "js"        : [ "./src/js/**/*.js",
                      "!./src/js/**/_*.js" ],

      "js_vendor" : "./src/vendor/**/*.js",
      "js_order"  : [ "jquery/**/*.js",
                      "**/*.js" ],

      "js_other"  : "./src/js/**/_*.js",

      "img"       : [ "src/img/**/*.png",
                      "src/img/**/*.jpg",
                      "src/img/**/*.gif" ],

      "fonts"     : [ "src/fonts/**/*.eot",
                      "src/fonts/**/*.ttf",
                      "src/fonts/**/*.svg",
                      "src/fonts/**/*.otf",
                      "src/fonts/**/*.woff" ]
    },
    "dest": {
      "css"   : "dist/styles",
      "html"  : "dist/",
      "js"    : "dist/js",
      "img"   : "dist/img",
      "fonts" : "dist/fonts"
    }
  },
  "watch": {
    "css"      : ["src/styles/**/*.styl",
                  "src/vendor/**/*.styl"],

    "jade"      : "src/jade/**/*.jade",

    "js"        : "src/js/**/*.js",

    "js_vendor" : "src/vendor/**/*.js",

    "img"       : [ "src/img/**/*.png",
                    "src/img/**/*.jpg",
                    "src/img/**/*.gif" ],

    "fonts"     : [ "src/fonts/**/*.eot",
                    "src/fonts/**/*.ttf",
                    "src/fonts/**/*.svg",
                    "src/fonts/**/*.otf",
                    "src/fonts/**/*.woff" ]
  },
  "server": {
    "host": "host.com",
    "port": "21",
    "user": "username",
    "pass": "userpass",
    "remotePath": "/"
  },
  "upload": {
    "css": "web/theme/css",
    "js": "web/theme/js"
  }
}